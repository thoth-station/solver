[all]
bears = LineCountBear, FilenameBear
files = **.py, **.yaml, **.rst, **.toml
file_naming_convention = snake
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc, openshift/**.yaml
max_lines_per_file = 1000
max_line_length = 120

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
language = Python
editor = vim
ignore = setup.py, docs/source/conf.py

[all.yaml]
bears = YAMLLintBear
files = **.yaml
ignore = .zuul.yaml
max_line_length = 120

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
